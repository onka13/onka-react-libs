{
    "compilerOptions": {
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "dist/js",
      "jsx": "react",
      "lib": [
        "es2017",
        "dom",
        "ES2019"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": true,
      "strictNullChecks": false,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "target": "es5",
      "noImplicitAny": false,
      "esModuleInterop": true
    },
    "include": [
      "./src/*",
      "./src/**/*"
    ],
    "exclude": [
      "./src/**/**.test.tsx",
      "./src/**/**.test.ts",
      "./src/**/**.stories.ts",
      "./src/**/**.stories.tsx",
      "./src/**/examples/**"
    ]
}